<script>
/* =====================
   PAGE CONTROL
===================== */
const pages = document.querySelectorAll('.page');
let index = 0;

function next(){
  pages[index].classList.remove('active');
  index++;
  pages[index].classList.add('active');
}

/* =====================
   NAME LOGIC
===================== */
function saveName(){
  const name = document.getElementById('username').value.trim();
  if(!name) return alert('Type your nameâ€¦ donâ€™t be shy ğŸ˜');
  document.getElementById('nameText').innerText =
    name + ", something about you feels dangerously addictive.";
  next();
}

/* =====================
   HEARTS
===================== */
for(let i=0;i<20;i++){
  const h=document.createElement('div');
  h.className='heart';
  h.style.left=Math.random()*100+'%';
  h.style.animationDuration=4+Math.random()*4+'s';
  document.body.appendChild(h);
}

/* =====================
   CONFETTI FINAL
===================== */
setTimeout(()=>{
  for(let i=0;i<30;i++){
    const c=document.createElement('div');
    c.className='confetti';
    c.style.left=Math.random()*100+'%';
    c.style.background=['#ff5fa2','#ff85c1','#ffc1dd'][Math.floor(Math.random()*3)];
    c.style.animationDuration=2+Math.random()*2+'s';
    document.body.appendChild(c);
  }
},8000);
